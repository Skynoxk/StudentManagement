<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="750" style="-fx-background-color: #ECF0F1;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SearchStudentController">
   <children>
   
      <AnchorPane layoutX="36.0" layoutY="88.0" prefHeight="146.0" prefWidth="678.0" style="-fx-background-color: linear-gradient(to right, #2C3E50, #677DB7); -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0, 5, 5);">
         <children>
         	<TextField fx:id="searchField" layoutX="89.0" layoutY="73.0" prefHeight="40.0" prefWidth="500.0" promptText="Enter name, ID, major, department, or address" style="-fx-background-radius: 20; -fx-font-size: 14px; -fx-padding: 5px;" />
            <Button fx:id="searchButton" layoutX="509.0" layoutY="73.0" mnemonicParsing="false" onAction="#handleSearch" prefHeight="40.0" prefWidth="80.0" style="-fx-background-radius: 25; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #2C3E50; -fx-text-fill: white; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 3, 3);" text="Search" />
            <Label layoutX="209.0" layoutY="23.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-font-family: 'Arial Rounded MT Bold'; " text="How can we help you?" textFill="white" />
         </children>
      </AnchorPane>
      
      <TableView fx:id="studentTable" layoutX="36.0" layoutY="264.0" prefHeight="307.0" prefWidth="678.0" style="-fx-background-color: white; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0, 5, 5);">
         <columns>
            <TableColumn fx:id="colID" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="colName" prefWidth="100.0" text="Name" />
            <TableColumn fx:id="colUsername" prefWidth="100.0" text="Username" />
            <TableColumn fx:id="colGrade" prefWidth="70.0" text="Grade" />
            <TableColumn fx:id="colMajor" prefWidth="100.0" text="Major" />
            <TableColumn fx:id="colGender" prefWidth="80.0" text="Gender" />
            <TableColumn fx:id="colBirthdate" prefWidth="93.6" text="Birthdate" />
            <TableColumn fx:id="colAddress" prefWidth="156.8" text="Address" />
            <TableColumn fx:id="colDepartment" prefWidth="100.0" text="Department" />
         </columns>
      </TableView>
      <Label layoutX="123.0" layoutY="23.0" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Welcome to Search Student Session" textFill="white" />
   </children>
</AnchorPane>
