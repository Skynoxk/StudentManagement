<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="1000" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.TeacherDashboardController">
   <children>
      <!-- Sidebar -->
      <AnchorPane prefHeight="600" prefWidth="250" style="-fx-background-color: #2C3E50;">
        <Label layoutX="130.0" layoutY="30.0" prefHeight="70.0" prefWidth="70.0" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: 'Arial Rounded MT Bold'; -fx-font-size: 40px" text="ITC" />

        <Button layoutX="-15.0" layoutY="139.0" prefWidth="210" onAction="#showAddStudentForm" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Verdana'; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-hover-color: #FAEFED; -fx-effect: dropshadow(gaussian, black, 3, 0, 0, 2);" text="👥   Add Student" />
        <Button layoutX="-18.0" layoutY="187.0" prefWidth="210" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Verdana'; -fx-font-size: 14px; -fx-cursor: hand" text="✅   Add Course" />
        <Button layoutX="-6.0" layoutY="272.0" prefWidth="210" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Verdana'; -fx-font-size: 14px; -fx-cursor: hand" text="📝   Update Student" />
        <Button layoutX="-1.0" layoutY="312.0" prefWidth="210.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Verdana'; -fx-font-size: 14px; -fx-cursor: hand" text="❌   Remove Student" />
    	<Button layoutX="-7.0" layoutY="355.0" prefWidth="210" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Verdana'; -fx-font-size: 14px; -fx-cursor: hand" text="🗓   View Students" />
    	<Button layoutX="11.0" layoutY="442.0" prefWidth="210" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Verdana'; -fx-font-size: 14px; -fx-cursor: hand" text="📖   View Course Grades" />
        <Button layoutX="20.0" layoutY="230.0" prefWidth="210.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Verdana'; -fx-font-size: 14px; -fx-cursor: hand" text="📑   Remove Course Grade" />
        <Button layoutX="-6.0" layoutY="399.0" prefWidth="210" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Verdana'; -fx-font-size: 14px; -fx-cursor: hand" text="🔍   Search Student" />
        <Button layoutX="17.0" layoutY="490.0" prefWidth="210" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-family: 'Verdana'; -fx-font-size: 14px; -fx-cursor: hand" text="📚   Search Course Grade" />

        <Button layoutX="20.0" layoutY="558.0" onAction="#handleLogout" prefWidth="210" style="-fx-background-color: transparent; -fx-text-fill: red; -fx-font-family: 'Arial Rounded MT Bold'; -fx-font-size: 14px;" text="🚪 Logout" />
        <ImageView fx:id="logoImageView" fitHeight="80.0" fitWidth="87.0" layoutX="30.0" layoutY="25.0">
               <Image url="@../images/Logo-ITC.png" />
        </ImageView>
      </AnchorPane>

      <!-- Main Content Area -->
      <AnchorPane fx:id="mainContent" layoutX="250" layoutY="0" prefHeight="600" prefWidth="750" style="-fx-background-color: white;">
         <!-- Content will be loaded dynamically here -->
      </AnchorPane>

   </children>
</AnchorPane>